{
  "name": "next-recaptcha-v3",
  "version": "1.0.0",
  "description": "ğŸ¤– Next.js hook to add Google ReCaptcha to your application",
  "license": "MIT",
  "author": "Roman Zhuravlov",
  "repository": "https://github.com/snelsi/next-recaptcha-v3",
  "homepage": "https://github.com/snelsi/next-recaptcha-v3",
  "keywords": [
    "recaptcha",
    "recaptcha-v3",
    "google-recaptcha-v3",
    "next",
    "next.js",
    "react",
    "hook"
  ],
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "files": [
    "/lib"
  ],
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "prettier": "prettier --write .",
    "lint": "eslint",
    "lint-fix": "eslint --fix",
    "fix": "npm run prettier && npm run lint-fix",
    "pre-commit": "npm run lint && lint-staged",
    "post-commit": "git update-index --again"
  },
  "peerDependencies": {
    "next": ">=11.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "engines": {
    "node": ">=12.22.0"
  },
  "dependencies": {
    "next": "^12.1.6",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.34",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.15.0",
    "eslint-config-next": "^12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.6.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "pretty-quick --staged"
    ]
  }
}
